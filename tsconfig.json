{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "paths": {
      "*": ["src/types/*", "node_modules/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
